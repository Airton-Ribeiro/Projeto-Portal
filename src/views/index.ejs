<%- include('includes/head')%> <%- include('includes/nav')%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Atividades</h1>
      <p class="text-center lead">Atividades para validar</p>

      <%- include('includes/messages') %> <% if (alunos.length > 0) { %>
        <div class="responsive-table">
          <table class="table my-3">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <!-- <th scope="col">Sobrenome</th> -->
                <th scope="col">Matrícula</th>
                <th scope="col">Curso</th>
                <th scope="col">Turno</th>
                <!-- <th scope="col">E-mail</th> -->
                <!-- <th scope="col">Data de envio</th> <<< INCLUIR ISSO DEPOIS DE CRIAR O "aluno.criadoEm" -->
              </tr>
            </thead>
            <tbody>
              <% const numeroInicial = 1; %> 
              <% const alunosReverso = alunos.slice().reverse(); %> <!-- ultimo aluno criado vai para o fim da lista -->
              <% alunosReverso.forEach((aluno, index) => { %>
              <tr>
                <td><%= index + numeroInicial %></td>
                <td><%= aluno.nome %></td>
                <!-- <td><%= aluno.sobrenome %></td> -->
                <td><%= aluno.matricula %></td>
                <td><%= aluno.curso %></td>
                <td><%= aluno.turno %></td>
                <!-- <td><%= aluno.email %></td> -->
                <td>
                  <a href="/aluno/atividade/<%= aluno._id %>">Avaliar Atividade</a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center lead">Não existem atividades a serem avaliadas.</p>
      <% } %>
      </div>
      

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer')%>
