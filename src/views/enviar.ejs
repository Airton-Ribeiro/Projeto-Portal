<%- include('includes/head')%>
<div id="bg-image">
  <div class="container">
    <div class="row justify-content-center align-items-center vh-100">
      <div class="col-lg-8 my-4" style="background-color: white; border-radius: 5px;">

        <form action="/aluno/enviar/att" method="POST" class="row shadow p-3 rounded " enctype="multipart/form-data" style=" background-color: white; box-shadow: 1px 1px 5px rgb(255, 0, 0);">
          <h3 class="text-center mb-4 mx-auto">Faça o envio da atividade abaixo</h3>
          <div class="col-lg-6 mb-3">
            <div class="d-flex flex-column">
              <label for="nome" class="form-label">Nome da atividade</label>
              <input id="nome" type="text" class="form-control" name="nome" required />
            </div>
            <div class="d-flex flex-column mt-3">
              <label for="matricula" class="form-label">Matrícula</label>
              <input id="matricula" type="text" class="form-control" name="matricula" required />
            </div>
            <div class="d-flex flex-column mt-3">
              <label for="horas">Horas</label>
              <input type="range" class="form-control-range" id="formControlRange" min="1" max="24" step="1" value="1">
              <output id="horaOutput">1</output>
            </div>
            <div class="d-flex flex-column mt-0">
              <div class="input-group">
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="anexo" name="anexo" required />
                  <label class="custom-file-label" for="anexo" data-browse="Anexar">Escolher arquivo</label> <!--tentativa de upload de arquivo. Realmente necessário todos os campos nessa div? -->
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-6 mb-3">
            <div class="d-flex flex-column">
              <label for="descricao" class="form-label">Descrição da atividade</label>
              <textarea id="descricao" class="form-control" rows="8" name="descricao" style="resize: none;" required></textarea>
            </div>

            <div class="mt-2">
              <button type="submit" class="btn btn-primary btn-block">Enviar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- script que coloquei para aparecer o nome do arquivo quando vc seleciona e também para aparecer o número de horas na barrinha - julio - -->

<script>
  const horasInput = document.getElementById('formControlRange');
  const horasOutput = document.getElementById('horaOutput');

  horasInput.addEventListener('input', function () {
    horasOutput.textContent = horasInput.value;
  });

  const anexoInput = document.getElementById('anexo');
  const anexoLabel = document.querySelector('.custom-file-label');

  anexoInput.addEventListener('change', function () {
    // Exibe o nome do arquivo selecionado no rótulo personalizado
    anexoLabel.textContent = this.files[0].name;
  });
</script>

