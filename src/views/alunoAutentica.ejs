<%- include('includes/head')%>
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-8 my-4">
          <h1 class="text-center">Faça o envio das atividades enviadas abaixo</h1>

          <%- include('includes/messages') %>
          <form action="/aluno/autenticado" method="POST">
          <div>
              <div class="mb-3">
                <label class="form-label">Matricula</label>
                <input value="Digite sua matricula" type="tel" class="form-control" name="matricula">
              </div>    
              <div class="col-lg-6 mb-3">
                <div class="d-flex flex-column">
                  <label for="nome" class="form-label">Nome da atividade</label>
                  <input id="nome" type="text" class="form-control" name="nome" required />
                </div>
                
                <div class="d-flex flex-column mt-3">
                  <label for="horas">Horas</label>
                  <input type="range" class="form-control-range" name="horas" id="formControlRange" min="1" max="24" step="1">
                  <output id="horaOutput">1</output>
                </div>
                <div class="d-flex flex-column mt-0">
                  <div class="col-lg-6 mb-3">
                    <div class="d-flex flex-column">
                      <label for="descricao" class="form-label">Descrição da atividade</label>
                      <textarea id="descricao" class="form-control" rows="8" name="descricao" style="resize: none;" required></textarea>
                    </div>
                </div>
              </div>   
              <button type="submit" class="btn btn-primary">Avançar</button>  
            </form>
        </div>
        </div>
      </div>
      <script>
        const horasInput = document.getElementById('formControlRange');
        const horasOutput = document.getElementById('horaOutput');
      
        horasInput.addEventListener('input', function () {
          horasOutput.textContent = horasInput.value;
        });
      </script>
    <%- include('includes/footer')%>